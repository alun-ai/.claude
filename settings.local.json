  "environment": {
    "CLAUDE_CODE_SHARED_CONFIG": "true",
    "CLAUDE_CODE_CONFIG_PATH": "../.claude",
    "CLAUDE_CODE_NIX_PATH": "../.claude/nix",
    "CLAUDE_CODE_AUTO_DETECT": "true",
